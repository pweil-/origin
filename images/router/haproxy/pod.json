{
    "kind": "Pod",
    "apiVersion": "v1beta1",
    "id": "ROUTER_ID",
    "desiredState": {
        "manifest": {
            "version": "v1beta2",
            "containers": [
                {
                    "name": "origin-haproxy-router-ROUTER_ID",
                    "image": "openshift/origin-haproxy-router",
                    "ports": [{
                        "containerPort": 80,
                        "hostPort": 80
                    }],
                    "command": ["--master=MASTER_IP:8080", "--loglevel=4"],
                    "imagePullPolicy": "PullIfNotPresent"
                }
            ],
            "restartPolicy": {
                "always": {}
            }
        }
    }
}
